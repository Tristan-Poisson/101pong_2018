#!/usr/bin/env python3

import sys
import math

def calc_angle(vx, vy, vz):
    V = math.sqrt((vx**2) + (vy**2) + (vz**2))
    if V == 0:
        return (0.00)
    else:
        V = vz / math.sqrt((vx**2) + (vy**2) + (vz**2))
    angle = math.asin(V)
    angle = math.degrees(angle)
    if angle < 0:
        angle = angle * -1
    if angle > 90:
        angle = 180 - angle
    return (angle)

if len(sys.argv) != 8:
    if sys.argv[1] == "-h":
        print("USAGE\n       ./101pong x0 y0 z0 x1 y1 z1n\n\n\nDESCRIPTION\n       x0   ball abscissa at time t - 1\n       y0   ball ordinate at time t - 1\n       z0   ball altitude at time t - 1\n       x1   ball abscissa at time t\n       y1   ball ordinate at time t\n       z1   ball altitude at time t\n       n    time shift (greater than or equal to zero, integer)")
        exit (0)
    else:
        exit (84)
if int(sys.argv[7]) < 0:
    exit (84)
x1 = float(sys.argv[1])
y1 = float(sys.argv[2])
z1 = float(sys.argv[3])
x2 = float(sys.argv[4])
y2 = float(sys.argv[5])
z2 = float(sys.argv[6])
n = int(sys.argv[7])
vx = x2 - x1
vy = y2	- y1
vz = z2	- z1
xn = x2 + vx * n
yn = y2	+ vy * n
zn = z2	+ vz * n

print("The velocity vector of the ball is:\n({:.2f}, {:.2f}, {:.2f})".format(vx, vy, vz))
print("At time t + {}, ball coordinates will be:\n({:.2f}, {:.2f}, {:.2f})".format(n, xn, yn, zn))
if z2 >= 0 and zn <= 0 or z2 < 0 and zn > 0:
    angle = calc_angle(vx, vy, vz)
    print("The incidence angle is:\n{:.2f} degrees".format(angle))
else:
    print("The ball won't reach the bat")
